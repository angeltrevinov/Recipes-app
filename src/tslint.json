{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],

        "comment-format": [
          true,
          "no-check-space",
          "check-uppercase"
        ]
    }
}
